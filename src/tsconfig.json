{
  "compilerOptions": {
    "outDir": "../dist",
    "target": "ES2017",
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node", "emscripten", "jquery", "jquery.terminal"],
    "noEmit": true,
  },
  "include": ["**/*.ts"],
}